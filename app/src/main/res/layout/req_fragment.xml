<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".OneService.SendReqFragment"
    android:id="@+id/req_fragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <!--<TextView-->
        <!--android:id="@+id/send_title"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_margin="10dp"-->
        <!--android:text="Отправить заявку"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:textColor="@color/common_google_signin_btn_text_dark_focused"-->
        <!--app:fontFamily="@font/fira_sans"-->
        <!--android:textSize="25dp"/>-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="500dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:text="Имя"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="15sp"
                app:fontFamily="@font/fira_sans" />

            <EditText
                android:id="@+id/fio_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                app:fontFamily="@font/fira_sans"/>

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="Телефон"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="15sp"
                app:fontFamily="@font/fira_sans"/>

            <EditText
                android:id="@+id/phone_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="0dp"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                app:fontFamily="@font/fira_sans"
                android:inputType="phone"/>

            <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="Адрес"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="15sp"
            app:fontFamily="@font/fira_sans"/>

            <EditText
                android:id="@+id/address_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="0dp"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                app:fontFamily="@font/fira_sans"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/delivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Способ забора"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="15sp"
                    app:fontFamily="@font/fira_sans"/>

                <Spinner
                    android:id="@+id/delivery_spin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>



            <!--<EditText-->
                <!--android:id="@+id/delivery_text"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="20dp"-->
                <!--android:layout_marginRight="10dp"-->
                <!--android:layout_marginTop="315dp"-->
                <!--android:textColor="@color/common_google_signin_btn_text_dark_focused"-->
                <!--app:fontFamily="@font/fira_sans"/>-->

            <TextView
                android:id="@+id/weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="Вес техники, кг"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="15sp"
                app:fontFamily="@font/fira_sans"/>

            <EditText
                android:id="@+id/weight_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="0dp"
                android:inputType="number"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                app:fontFamily="@font/fira_sans"/>

            <CheckBox
                android:id="@+id/recyclables"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layoutDirection="rtl"
                android:text="Вторичное сырье"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="15sp"
                app:fontFamily="@font/fira_sans"/>

            <TextView
                android:id="@+id/pay_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorAccent"
                android:textSize="15sp"
                app:fontFamily="@font/fira_sans"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="Способ оплаты"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="15sp"
                app:fontFamily="@font/fira_sans"/>

            <Spinner
                android:id="@+id/pay_spin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />
        </LinearLayout>





            <!--<EditText-->
                <!--android:id="@+id/pay_text"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="20dp"-->
                <!--android:layout_marginRight="10dp"-->
                <!--android:layout_marginTop="505dp"-->
                <!--android:textColor="@color/common_google_signin_btn_text_dark_focused"-->
                <!--app:fontFamily="@font/fira_sans"/>-->


            <TextView
                android:id="@+id/mes_info_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/colorAccent"/>

        </LinearLayout>

    </ScrollView>

    </LinearLayout>



    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_send_req"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ОТПРАВИТЬ ЗАЯВКУ"
        android:textSize="15sp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>

</FrameLayout>